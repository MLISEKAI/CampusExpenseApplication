<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".BudgetFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Budget Overview"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#ff6c17"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Budget: 0 VND"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/tvTotalBudget"
                android:layout_marginBottom="4dp"
                android:textColor="#1B5E20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remaining Budget: 0 VND"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/tvRemainingBudget"
                android:layout_marginBottom="8dp"
                android:textColor="#D32F2F" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Budget"
                android:id="@+id/btnSetBudget"
                android:layout_marginTop="8dp"
                android:backgroundTint="#ff6c17"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
